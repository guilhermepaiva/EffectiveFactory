<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/gridLayout"
        android:background="@android:color/white">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButtonRegister"
            android:layout_row="0"
            android:layout_column="0"
            android:src="@drawable/register_m"
            android:padding="30dp"
            android:background="@android:color/white" />

        <TextView
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:text="CADASTRO"
            android:id="@+id/textView"
            android:layout_row="0"
            android:layout_column="0"
            android:textSize="20dp"
            android:textAlignment="center" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButtonLogin"
            android:layout_row="0"
            android:layout_column="1"
            android:src="@drawable/login_rfid_m"
            android:padding="30dp"
            android:background="@android:color/white" />
        <TextView
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:text="LOGIN"
            android:id="@+id/textView1"
            android:layout_row="0"
            android:layout_column="1"
            android:textSize="20dp"
            android:textAlignment="center"/>


        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButtonOS"
            android:layout_row="1"
            android:layout_column="0"
            android:src="@drawable/os"
            android:padding="30dp"
            android:background="@android:color/white" />
        <TextView
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:text="ORDEM DE SERVIÇO"
            android:id="@+id/textView2"
            android:layout_row="1"
            android:layout_column="0"
            android:textSize="15dp"
            android:textAlignment="center"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButtonProduction"
            android:layout_row="1"
            android:layout_column="1"
            android:src="@drawable/production"
            android:padding="30dp"
            android:background="@android:color/white" />
        <TextView
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:text="PRODUÇÃO"
            android:id="@+id/textView3"
            android:layout_row="1"
            android:layout_column="1"
            android:textSize="20dp"
            android:textAlignment="center"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButtonTimeLine"
            android:layout_row="2"
            android:layout_column="0"
            android:src="@drawable/time_line"
            android:padding="30dp"
            android:background="@android:color/white" />
        <TextView
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:text="TIME LINE"
            android:id="@+id/textView4"
            android:layout_row="2"
            android:layout_column="0"
            android:textSize="20dp"
            android:textAlignment="center"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButtonIndicators"
            android:layout_row="2"
            android:layout_column="1"
            android:src="@drawable/indicators"
            android:padding="30dp"
            android:background="@android:color/white" />
        <TextView
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:text="INDICADORES"
            android:id="@+id/textView5"
            android:layout_row="2"
            android:layout_column="1"
            android:textSize="20dp"
            android:textAlignment="center"/>


    </GridLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PAINEL GERAL"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="23dp" />

</RelativeLayout>