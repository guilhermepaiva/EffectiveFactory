<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:columnCount="4"
    android:rowCount="3">

    <TextView android:id="@+id/idProductPatternTime"
        android:layout_gravity="fill_horizontal"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="15dp"
        android:text="Produto: "
        android:layout_width="wrap_content"
        android:visibility="visible" />

    <TextView android:id="@+id/idSubroductPatternTime"
        android:layout_gravity="fill_horizontal"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="15dp"
        android:text="Produto: "
        android:layout_width="wrap_content"
        android:visibility="visible" />

    <TextView android:id="@+id/idOperationPatternTime"
        android:layout_gravity="fill_horizontal"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="15dp"
        android:text="Operacao: "
        android:layout_width="wrap_content"
        android:visibility="visible" />


    <TextView android:id="@+id/idTimePatternTime"
        android:layout_gravity="fill_horizontal"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="15dp"
        android:text="Tempo Padrao: "
        android:layout_width="wrap_content"
        android:visibility="visible" />

</GridLayout>