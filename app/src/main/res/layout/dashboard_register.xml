<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="CADASTRO"
        android:id="@+id/textView6"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="27dp"
        android:background="@android:color/white"/>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:background="@android:color/white">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButtonRegisterEmployee"
            android:layout_row="0"
            android:layout_column="0"
            android:src="@drawable/add_employee"
            android:background="@android:color/white"
            android:padding="30dp" />
        <TextView
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:text="FUNCIONÁRIO"
            android:id="@+id/textView"
            android:layout_row="0"
            android:layout_column="0"
            android:textSize="20dp"
            android:textAlignment="center" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButtonRegisterOperativePost"
            android:layout_row="0"
            android:layout_column="1"
            android:background="@android:color/white"
            android:src="@drawable/operative_post"
            android:padding="30dp" />
        <TextView
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:text="POSTO OPERATIVO"
            android:id="@+id/textView1"
            android:layout_row="0"
            android:layout_column="1"
            android:textSize="15dp"
            android:textAlignment="center" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButtonRegisterProduct"
            android:layout_row="1"
            android:layout_column="0"
            android:background="@android:color/white"
            android:src="@drawable/product"
            android:padding="30dp" />
        <TextView
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:text="PRODUTO"
            android:id="@+id/textView2"
            android:layout_row="1"
            android:layout_column="0"
            android:textSize="20dp"
            android:textAlignment="center" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButtonRegisterPatternTime"
            android:layout_row="1"
            android:layout_column="1"
            android:background="@android:color/white"
            android:src="@drawable/pattern_time"
            android:padding="30dp" />
        <TextView
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:text="TEMPO PADRÃO"
            android:id="@+id/textView3"
            android:layout_row="1"
            android:layout_column="1"
            android:textSize="18dp"
            android:textAlignment="center" />

    </GridLayout>
</RelativeLayout>